<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="pers.ssm.mapper.StudentMapper">
  		<select id="queryAllStudent" resultType="pers.ssm.po.Student">
  			select * from student
  		</select>
  		<select id="queryStudentByNo" resultType="pers.ssm.po.Student">
  		select * from student where id=#{id}
  		</select>
	     <update id="updateStudent">
  		update student set address=#{address,jdbcType=VARCHAR}
  		,phone=#{phone,jdbcType=VARCHAR},pic=#{pic, jdbcType=VARCHAR}where id=#{id,jdbcType=INTEGER}
  		</update>
  		<insert id="insertStudent">
  		insert into student (name,gender,DOB,phone,address,major,pic) values(
  		#{name},#{gender},#{DOB},#{phone},#{address},#{major},#{pic}
  		)
  		</insert>
  		<delete id="deleteStudentByNo">
  		delete from student where id=#{id}
  		</delete>
  		<select id="queryStudentByPage" resultType="pers.ssm.po.Student">
  		select * from student limit #{param1},#{param2}
  		</select>
  		<select id="totalCount" resultType="Integer">
  		select count(*) from student 
  		</select>
  		
  </mapper>
  <!-- 问题：参数是怎么传入的,mybatis如何知道传入的是对象对应的成员变量 -->
